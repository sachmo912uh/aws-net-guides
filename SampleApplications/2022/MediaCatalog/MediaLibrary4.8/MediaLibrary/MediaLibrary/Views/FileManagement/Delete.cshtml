@model MediaLibrary.Models.DeleteImageViewModel

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>DeleteImageViewModel</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.KeyName)
            </dt>

            <dd>
                @Html.EditorFor(model => model.KeyName, new { disabled = "disabled", @readonly = "readonly" })
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>

            <dd>
                @Html.EditorFor(model => model.ImageUrl)
            </dd>

            @Html.RadioButtonFor(m => m.DeleteType, "Image") Delete Image.
            <p />
            @Html.RadioButtonFor(m => m.DeleteType, "Data") Delete Data Only.


        </dl>



        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}
